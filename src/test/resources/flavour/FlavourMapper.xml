<mapper namespace="flavour.FlavourMapper">

    <resultMap id="FlavourResultMap" type="flavour.Flavour">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>

    <insert id="create" parameterType="Flavour">
        insert into
            flavour(
                name
            )
        values (
            #{name}
        )
        <selectKey order="AFTER" resultType="int" keyProperty="id">
            CALL IDENTITY()
        </selectKey>
    </insert>

    <select id="retrieve" parameterType="int" resultMap="FlavourResultMap">
        select
            *
        from
            flavour
        where
            id = #{id}
    </select>

    <update id="update" parameterType="Flavour">
        update
            flavour
        set
            name = #{name}
        where
            id = #{id}
    </update>

    <delete id="delete" parameterType="int">
        delete from
            flavour
        where
            id = #{id}
    </delete>

</mapper>
